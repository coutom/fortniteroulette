<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/rollbg"
    tools:context=".Roll">

    <TextView
        android:id="@+id/weapons_txt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Weapons:"
        android:fontFamily="@font/fortnite_font"
        android:textSize="35sp"
        android:textColor="#fef65b"
        android:paddingLeft="20dp"
        android:layout_marginTop="20dp"
        android:paddingBottom="10dp"/>

    <TextView
        android:id="@+id/healing_txt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Healing:"
        android:fontFamily="@font/fortnite_font"
        android:textSize="35sp"
        android:textColor="#fef65b"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_below="@+id/weapons_txt2"/>

    <TextView
        android:id="@+id/dropzone_txt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Drop Zone:"
        android:fontFamily="@font/fortnite_font"
        android:textSize="35sp"
        android:textColor="#fef65b"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_below="@+id/healing_txt2"/>

    <TextView
        android:id="@+id/traps_txt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Traps:"
        android:fontFamily="@font/fortnite_font"
        android:textSize="35sp"
        android:textColor="#fef65b"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_below="@+id/dropzone_txt2"/>

    <TextView
        android:id="@+id/building_txt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Building:"
        android:fontFamily="@font/fortnite_font"
        android:textSize="35sp"
        android:textColor="#fef65b"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_below="@+id/traps_txt2"/>

    <TextView
        android:id="@+id/special_txt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Special:"
        android:fontFamily="@font/fortnite_font"
        android:textSize="35sp"
        android:textColor="#fef65b"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_below="@+id/building_txt2"/>


    <ImageButton
        android:id="@+id/roll_btn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/special_txt2"
        android:layout_marginTop="20dp"
        android:src="@mipmap/roll_normal"/>


</RelativeLayout>